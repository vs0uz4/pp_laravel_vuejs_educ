##############################################################
# ATENTION:
# Replace all occurences of sandbox with your project's name
##############################################################

version: '2.1'

volumes:
  sandbox-config:
    driver: local

  sandbox-cache:
    driver: local

  sandbox-local:
    driver: local

  sandbox-yarn:
    driver: local

  sandbox-npm:
    driver: local

  sandbox-mysql-data:
    driver: local

  sandbox-redis-data:
    driver: local

services:
  mysql:
    image: ambientum/mysql:5.7
    container_name: sandbox-mysql
    networks:
      sandbox_net:
        ipv4_address: 192.168.0.2
    volumes:
      - sandbox-mysql-data:/var/lib/mysql
    ports:
      - "3306:3306"
    environment:
      - MYSQL_ROOT_PASSWORD=sandbox
      - MYSQL_DATABASE=sandbox
      - MYSQL_USER=sandbox
      - MYSQL_PASSWORD=sandbox

  cache:
    image: ambientum/redis:3.2
    container_name: sandbox-redis
    networks:
      sandbox_net:
        ipv4_address: 192.168.0.3
    command: --appendonly yes
    volumes:
      - sandbox-redis-data:/data
    ports:
      - "6379:6379"

  app:
    image: ambientum/php:latest-nginx
    container_name: sandbox-app
    networks:
      sandbox_net:
        ipv4_address: 192.168.0.4
    volumes:
      - .:/var/www/app
    ports:
      - "80:8080"
    links:
      - mysql
      - cache

  queue:
    image: ambientum/php:7.0
    container_name: sandbox-queue
    networks:
      sandbox_net:
        ipv4_address: 192.168.0.5
    command: php artisan queue:listen
    volumes:
      - .:/var/www/app
    links:
      - mysql
      - cache

  dev:
    image: ambientum/node:8
    container_name: sandbox-dev
    networks:
      sandbox_net:
        ipv4_address: 192.168.0.6
    volumes:
      - .:/var/www/app
      - sandbox-config:/home/ambientum/.config
      - sandbox-cache:/home/ambientum/.cache
      - sandbox-local:/home/ambientum/.local
      - sandbox-yarn:/home/ambientum/.yarn
      - sandbox-npm:/home/ambientum/.npm

networks:
  sandbox_net:
    driver: bridge
    enable_ipv6: true
    ipam:
      driver: default
      config:
      - subnet: 192.168.0.0/24
        gateway: 192.168.0.1